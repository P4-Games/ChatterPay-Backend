{
  "name": "chatterpay-backend",
  "license": "MIT",
  "private": false,
  "author": "P4-games",
  "version": "1.0.0",
  "description": "Crypto at a message's distance!",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts --fix && yarn type-check",
    "format": "prettier --write .",
    "create-env": "printenv > .env",
    "pre-commit": "npm run format && npm run lint:fix",
    "docker:build": "bash ./scripts/docker-build.sh",
    "docker:run": "bash docker run -d -p 3000:3000 --name chatterpay-back-app-container chatterpay-back-app",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
