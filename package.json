    "eslint-plugin-unused-imports": "^3.0.0",
    "mongodb-memory-server": "^10.1.3",
    "prettier": "^3.2.5",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
